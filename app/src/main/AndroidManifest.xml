<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team5.uta.connectifyv1" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".LoginActivity"
            android:label="Connectify" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="Connectify" >
        </activity>
        <activity
            android:name=".AddInterestActivity"
            android:label="Connectify" >
        </activity>
        <activity
            android:name=".MapActivity"
            android:label="Connectify" >
        </activity>
        <activity
            android:name=".SecurityQuestions"
            android:label="Connectify" >
        </activity>
        <activity
            android:name=".UserProfile"
            android:label="Connectify" >
        </activity>

        <service android:name=".GeofenceTransitionsIntentService" />

        <activity
            android:name=".UserIdForgotPwd"
            android:label="Connectify" >
        </activity>
        <activity
            android:name=".ForgotPassword"
            android:label="Connectify" >
        </activity>
        <activity
            android:name=".DisplayPassword"
            android:label="Connectify" >
        </activity>
        <activity
            android:name=".ChangePassword.NewPassword"
            android:label="Connectify" >
        </activity>
        <activity
            android:name=".ChangePassword.ChangeSecurityQuestions"
            android:label="Connectify" >
        </activity>
        <activity
            android:name=".NotificationActivity"
            android:label="Connectify" >
        </activity>
        <activity
            android:name=".OtherUserProfile"
            android:label="Connectify" >
        </activity>
    </application>

</manifest>
