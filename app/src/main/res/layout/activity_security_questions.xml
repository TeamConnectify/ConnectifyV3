<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.team5.uta.connectifyv1.sec_ques">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Security Questions"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sec_ques_spinner1"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="48dp"
        android:layout_alignEnd="@+id/textView3" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/editText10"
        android:background="@drawable/edittextstyle"
        android:layout_below="@+id/sec_ques_spinner1"
        android:layout_alignEnd="@+id/sec_ques_spinner1"
        android:layout_alignStart="@+id/sec_ques_spinner1" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sec_ques_spinner2"
        android:layout_alignStart="@+id/editText10"
        android:layout_alignEnd="@+id/editText10"
        android:layout_below="@+id/editText10" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/editText11"
        android:background="@drawable/edittextstyle"
        android:layout_below="@+id/sec_ques_spinner2"
        android:layout_alignEnd="@+id/sec_ques_spinner2"
        android:layout_alignStart="@+id/sec_ques_spinner2" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sec_ques_spinner3"
        android:layout_below="@+id/editText11"
        android:layout_alignStart="@+id/editText11"
        android:layout_alignEnd="@+id/editText11" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/editText12"
        android:background="@drawable/edittextstyle"
        android:layout_below="@+id/sec_ques_spinner3"
        android:layout_alignEnd="@+id/sec_ques_spinner3"
        android:layout_alignStart="@+id/sec_ques_spinner3" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Back"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Next"
        android:id="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button2"
         />

</RelativeLayout>