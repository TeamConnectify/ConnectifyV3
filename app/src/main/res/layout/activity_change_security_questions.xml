<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.team5.uta.connectifyv1.ChangePassword.ChangeSecurityQuestions">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q1"
        android:id="@+id/q1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a1"
        android:layout_below="@+id/q1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Enter Answer 1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q2"
        android:id="@+id/q2"
        android:layout_below="@+id/a1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a2"
        android:hint="Enter Answer 2"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/a1"
        android:layout_alignStart="@+id/a1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q3"
        android:id="@+id/q3"
        android:layout_below="@+id/a2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a3"
        android:hint="Enter Answer 3"
        android:layout_below="@+id/q3"
        android:layout_alignLeft="@+id/a2"
        android:layout_alignStart="@+id/a2"
        android:layout_marginTop="46dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit_button_1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
